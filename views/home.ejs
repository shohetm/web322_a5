<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Lego Collection</title>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
    <script src="/server.js"></script>
</head>
<body>
    <header>
        <%- include('partials/navbar', { page: '/lego/sets' }) %>
    </header>
    <main class="container mx-auto p-4">
        <section class="bg-gray-200 p-8 text-center">
            <div>
                <h1 class="text-5xl font-bold">Welcome to the Lego Collection</h1>
                <div id="quote-section" class="mt-6">
                    <p id="quote-content" class="text-xl italic"></p>
                    <p id="quote-author" class="text-lg font-bold mt-2"></p>
                </div>
                <br>
                <a class="bg-blue-500 text-white py-2 px-4 rounded" href="/lego/sets">Explore Sets</a>
            </div>
        </section>
        <section class="grid grid-cols-1 md:grid-cols-3 gap-6 py-6">
            <div class="bg-white shadow-xl rounded p-4">
                <figure><img src="https://cdn.rebrickable.com/media/sets/003-1.jpg" alt="Master Mechanic Set" class="w-full"></figure>
                <div class="mt-4">
                    <h2 class="text-xl font-bold">Master Mechanic Set</h2>
                    <p>...................</p>
                    <div class="mt-4 text-right">
                        <a class="bg-blue-500 text-white py-2 px-4 rounded" href="/lego/sets/003-1">View Set</a>
                    </div>
                </div>
            </div>
            <div class="bg-white shadow-xl rounded p-4">
                <figure><img src="https://cdn.rebrickable.com/media/sets/00-6.jpg" alt="Special Edition Set" class="w-full"></figure>
                <div class="mt-4">
                    <h2 class="text-xl font-bold">Special Edition Set</h2>
                    <p>...................</p>
                    <div class="mt-4 text-right">
                        <a class="bg-blue-500 text-white py-2 px-4 rounded" href="/lego/sets/00-6">View Set</a>
                    </div>
                </div>
            </div>
            <div class="bg-white shadow-xl rounded p-4">
                <figure><img src="https://cdn.rebrickable.com/media/sets/01-2.jpg" alt="Bulldozer Chain Links" class="w-full"></figure>
                <div class="mt-4">
                    <h2 class="text-xl font-bold">Bulldozer Chain Links</h2>
                    <p>...................</p>
                    <div class="mt-4 text-right">
                        <a class="bg-blue-500 text-white py-2 px-4 rounded" href="/lego/sets/01-2">View Set</a>
                    </div>
                </div>
            </div>
        </section>
    </main>

    <script>
        document.addEventListener("DOMContentLoaded", async () => {
            try {
                const response = await fetch('https://quotable.io/random');
                const data = await response.json();
                document.getElementById('quote-content').innerText = `"${data.content}"`;
                document.getElementById('quote-author').innerText = `- ${data.author}`;
            } catch (error) {
                console.error('Error fetching the quote:', error);
            }
        });
    </script>

</body>
</html>
